<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.developersbreach.developersbreach.viewModel.FavoritesViewModel" />

        <variable
            name="favorites"
            type="com.developersbreach.developersbreach.model.Articles" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/favorites_title_text_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@{favorites.title + favorites.id}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/favorite_remove_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="This is sample text for title placeholder no way important lol XD" />

        <ImageView
            android:id="@+id/favorite_remove_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            tools:src="@drawable/ic_favorite_remove"
            app:removeFavorite="@{favorites}"
            app:getFavViewModel="@{viewModel}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/favorites_title_text_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>